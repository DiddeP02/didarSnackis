@page
@model SnackisUppgift.Pages.Admin.SubjectAdmin.IndexModel

@{
    ViewData["Title"] = "Index";
}

<style>
    .body {
        background-image: url('/Backgroundimages/best-background-for-website-14.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }
</style>

<h1>Index</h1>

<p>
    <a asp-page="Create">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subject[0].Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Subject) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
